<%- model_class = ExpireDate -%>
<div class="page-header">
  <h1>Data de Expiração</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Data:</strong></dt>
  <dd><%= @expire_date.date_expire %></dd>
  <dt><strong>Ativo?:</strong></dt>
  <dd><%= @expire_date.active %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              expire_dates_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_expire_date_path(@expire_date), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              expire_date_path(@expire_date),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
