<%= form_for @outtowel, :html => { :class => "form-horizontal outtowel" } do |f| %>

  <% if @outtowel.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@outtowel.errors.count, "error") %> prohibited this outtowel from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @outtowel.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'cliente', :class => 'control-label col-lg-2' %>
    <div class="col-lg-4">
      <%= f.collection_select(:client_id, @clients, :id, :company, {include_blank: 'Selecione o cliente:'},:class => 'form-control') %>
    </div>
    <%=f.error_span(:client_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit 'Salvar', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                outtowels_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
