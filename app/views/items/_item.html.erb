<table class="table table-striped">
  <thead>
    <tr>
      <th> <%= 'produto' %></th>
      <th><%= 'qnt' %></th>
      <th><%= 'val unit R$' %></th>
      <th><%= 'total R$' %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      
    </tr>
  </thead>
  <tbody>
 
 	<% @intowel.items.each do |item| %>
        <tr>
        <td><%= item.product.name %></td>
        <td><%= item.qnt %></td>
        <td><%= item.sale_value %></td>
        <td><%= item.total_value %></td>
                
	      		<td><%= link_to t('.destroy', :default => t("helpers.links.destroy")), [item.intowel, item], :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger' %>
		        </td>
      </tr>
      <% end %>
       </tbody>
       
   </table>


